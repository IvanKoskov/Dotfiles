## HYPER == SHIFT + CMD + ALT + OPTION

## Quickly restart the yabai launch agent
ctrl + alt + cmd - r : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"

ctrl + alt + cmd - h : (yabai -m space --focus prev || yabai -m space --focus last) || skhd -k "ctrl + cmd - left"
ctrl + alt + cmd - l : (yabai -m space --focus next || yabai -m space --focus first) || skhd -k "ctrl + cmd - right"

ctrl + alt + cmd - n : yabai -m space --create

ctrl + alt - s : yabai -m window --toggle sticky

hyper - a : yabai -m window --minimize

ctrl + alt + cmd - d : yabai -m space --destroy
# balance out tree 
hyper - e : yabai -m space --balance

## Close active application
hyper - backspace : $(yabai -m window $(yabai -m query --windows --window | jq -re ".id") --close)

hyper - f : yabai -m window --toggle zoom-fullscreen; sketchybar --trigger window_focus
 
hyper - i : yabai -m window --swap first

ctrl + alt - h : yabai -m window --warp west
ctrl + alt - j : yabai -m window --warp south
ctrl + alt - k : yabai -m window --warp north
ctrl + alt - l : yabai -m window --warp east

hyper - h : yabai -m window --focus west
hyper - j : yabai -m window --focus south
hyper - k : yabai -m window --focus north
hyper - l : yabai -m window --focus east

hyper - u : yabai -m space --rotate 90

shift + ctrl - a : yabai -m window --move rel:-20:0
shift + ctrl - s : yabai -m window --move rel:0:20
shift + ctrl - w : yabai -m window --move rel:0:-20
shift + ctrl - d : yabai -m window --move rel:20:0



# increase window size
 hyper - left : yabai -m window --resize left:-20:0
 hyper - down : yabai -m window --resize bottom:0:20
 shift + alt - w : yabai -m window --resize top:0:-20
 shift + alt - d : yabai -m window --resize right:20:0
#
 # decrease window size
 hyper - right : yabai -m window --resize left:20:0
 hyper - up : yabai -m window --resize bottom:0:-20
 shift + cmd - w : yabai -m window --resize top:0:20
 shift + cmd - d : yabai -m window --resize right:-20:0


ctrl + shift - 1 : yabai -m space --layout bsp
ctrl + shift - 2 : yabai -m window --toggle float; sketchybar --trigger window_focus

hyper - d : yabai -m space --toggle show-desktop

hyper - s : sketchybar --bar hidden=toggle

ctrl + shift - 3 : yabai -m config external_bar main:45:0

ctrl + shift - 4 : yabai -m config external_bar main:0:0

ctrl + alt + cmd - 1 : yabai -m window --space 1 && yabai -m space --focus 1
ctrl + alt + cmd - 2 : yabai -m window --space 2 && yabai -m space --focus 2

ctrl + alt + cmd - 3 : yabai -m window --space 3 && yabai -m space --focus 3

